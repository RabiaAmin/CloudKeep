<!doctype html>
<html>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
    <link href="https://cdn.jsdelivr.net/npm/flowbite@3.1.2/dist/flowbite.min.css" rel="stylesheet" />
    <link
    href="https://cdn.jsdelivr.net/npm/remixicon@4.5.0/fonts/remixicon.css"
    rel="stylesheet"
/>
<style>
  html, body {
    height: 100%;
  }
</style>
  </head>
  <body>
  <main class="md:py-4 md:px-20 py-2 px-10 bg-gray-100 dark:bg-gray-800 min-h-screen min-w-screen">

      
  <div class="items-start">
            <h1 class="text-white/80 font-bold text-xl font-mono">Cloudkeep.</h1>
        </div>
        <div class="w-full h-70 border border-white/70 rounded-md overflow-hidden ">
          <img src="/images/bg.jpg" class=" h-full w-full object-cover transition-transform duration-300 hover:scale-110" alt="#image">
        </div>

        <button onclick="showPopup()" class="mt-6 bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded">
         upload files
        </button>

        <div class="popup hidden backdrop-blur fixed top-0 left-0 h-screen w-screen flex items-center justify-center ">
            <form action="/upload" method="post" enctype="multipart/form-data">
              <div class="flex items-center justify-center w-250">
               <label for="dropzone-file" class="flex flex-col items-center justify-center w-full h-64 border-2 border-gray-300 border-dashed rounded-lg cursor-pointer bg-gray-50 dark:hover:bg-gray-800 dark:bg-gray-700 hover:bg-gray-100 dark:border-gray-600 dark:hover:border-gray-500 dark:hover:bg-gray-600">
                   <div class="flex flex-col items-center justify-center pt-5 pb-6">
                       <svg class="w-8 h-8 mb-4 text-gray-500 dark:text-gray-400" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 20 16">
                           <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 13h3a3 3 0 0 0 0-6h-.025A5.56 5.56 0 0 0 16 6.5 5.5 5.5 0 0 0 5.207 5.021C5.137 5.017 5.071 5 5 5a4 4 0 0 0 0 8h2.167M10 15V6m0 0L8 8m2-2 2 2"/>
                       </svg>
                       <p class="mb-2 text-sm text-gray-500 dark:text-gray-400"><span class="font-semibold">Click to upload</span> or drag and drop</p>
                       <p class="text-xs text-gray-500 dark:text-gray-400">SVG, PNG, JPG or GIF (MAX. 800x400px)</p>
                   </div>
                   <input id="dropzone-file" type="file" name="file" class="hidden" />
               </label>
           </div> 
        
               <button type="submit" class="mt-4 bg-gray-600 hover:bg-gray-700 text-white font-bold py-2 px-4 rounded"">
                upload file
               </button>

                <button type="button" onclick="hidePupup()" class="mt-4 bg-gray-600 hover:bg-gray-700 text-white font-bold py-2 px-4 rounded"">
            cancle
           </button>

          
            </form>
            <button class="absolute top-0 right-0 p-4 text-gray-500 text-xl" onclick="hidePupup()">
                <i  class="ri-close-line cursor-pointer"></i>
            </button>
        

        </div>

        <div class="files mt-3 flex flex-col gap-2 max-h-[250px] overflow-y-auto">
            <% files.forEach((file)=>{%>
             <div class="flex justify-between items-center p-2 rounded-md bg-gray-200">
                <h1><%= file.originalname %></h1>
              <a href="/download/<%= file.fileId %>" download="<%= file.originalname %>" class="text-blue-500 hover:text-blue-700">
    <i class="ri-download-line"></i>
</a>
              </div>
             <% }) %>
        
        </div>
      
      
    </main>

    <script>
        function showPopup(){
            document.querySelector('.popup').style.display = 'flex'
        }

        function hidePupup(){
            document.querySelector('.popup').style.display = 'none'
        }
    </script>
    <script src="https://cdn.jsdelivr.net/npm/flowbite@3.1.2/dist/flowbite.min.js"></script>
  </body>
</html>